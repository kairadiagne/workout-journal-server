{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@workoutjournal/database": [
        "libs/database/src"
      ],
      "@workoutjournal/database/*": [
        "libs/database/src/*"
      ],
      "@workoutjournal/exercises": [
        "libs/exercises/src"
      ],
      "@workoutjournal/exercises/*": [
        "libs/exercises/src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  }
}